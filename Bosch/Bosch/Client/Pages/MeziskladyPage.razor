@page "/mezisklad/list"
@using Bosch.Shared
@inject HttpClient Http
@inject NavigationManager NavManager

<h3>Mezisklady</h3>

@if (mezisklady == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazev</th>
                <th>Jizdni Rady</th>
                <th>Vlacky</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mezisklad in mezisklady)
            {
            <tr>
                <td class=vlacek>@mezisklad.Id</td>
                <td>@mezisklad.Jmeno</td>
                <td>@mezisklad.jizdniRad</td>
                <td>@mezisklad.seznamVlacku</td>
                <td>
                    <button type="button" class="btn btn-outline-primary btn-sm" @onclick="(() => Edit(mezisklad.Id))">
                        <span class="oi oi-pencil" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-outline-primary btn-sm" @onclick="(() => Edit(mezisklad.Id))">
                        <span class="oi oi-trash" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
            }
        </tbody>
    </table>
}

@code {
    private Mezisklad[] mezisklady;

    protected override async Task OnInitializedAsync()
    {
        mezisklady = await Http.GetFromJsonAsync<Mezisklad[]>("/api/mezisklad/list");
    }

    private void Edit(int id)
    {

        NavManager.NavigateTo("/mezisklad/edit/" + id);
    }
}
