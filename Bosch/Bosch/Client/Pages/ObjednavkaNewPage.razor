@page "/objednavka/new"
@using Bosch.Shared
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Nová objednávka</h3>

@if (Objednavka != null)
{
    <EditForm Model="@Objednavka" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <InputText id="name" @bind-Value="Objednavka.Mezisklad.Jmeno" />
        <button type="submit">Submit</button>
    </EditForm>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Objednavka Objednavka { get; set; }

    private async void HandleValidSubmit()
    {
        await Http.PostAsJsonAsync<Objednavka>("/api/objednavka/save", Objednavka);
        Navigation.NavigateTo("/objednavky");
    }
}

